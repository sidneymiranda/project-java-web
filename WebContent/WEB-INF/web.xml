<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	
	<display-name>ProjectJavaWebJSP</display-name>
	<welcome-file-list>
		<welcome-file>/pages/login/login.jsp</welcome-file>
	</welcome-file-list>

	
	<servlet>
		<servlet-name>authenticator</servlet-name>
		<servlet-class>br.ucsal.servlets.AuthenticatorSrv</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>br.ucsal.servlets.RegisterUserSrv</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>addBook</servlet-name>
		<servlet-class>br.ucsal.servlets.AddBookSrv</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>remove</servlet-name>
		<servlet-class>br.ucsal.servlets.RemoveBookSrv</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>consult</servlet-name>
		<servlet-class>br.ucsal.servlets.ConsultBookSrv</servlet-class>
	</servlet>	
	
	
	<servlet-mapping>
		<servlet-name>authenticator</servlet-name>
		<url-pattern>/authenticator</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register-user</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>addBook</servlet-name>
		<url-pattern>/add-book</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>remove</servlet-name>
		<url-pattern>/remove-book</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>consult</servlet-name>
		<url-pattern>/consult-book</url-pattern>
	</servlet-mapping>

</web-app>