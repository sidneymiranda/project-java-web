<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>VirtualBookcase</display-name>
  <welcome-file-list>
    <welcome-file>/pages/login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>authenticator</servlet-name>
    <servlet-class>br.ucsal.servlets.AuthenticatorSrv</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>createUser</servlet-name>
    <servlet-class>br.ucsal.servlets.CreateUserSrv</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addBook</servlet-name>
    <servlet-class>br.ucsal.servlets.AddBookSrv</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>crud</servlet-name>
    <servlet-class>br.ucsal.servlets.CrudSrv</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>crudAdmin</servlet-name>
    <servlet-class>br.ucsal.servlets.CrudAdminSrv</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>authenticator</servlet-name>
    <url-pattern>/authenticator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>createUser</servlet-name>
    <url-pattern>/createUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addBook</servlet-name>
    <url-pattern>/add-book</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>crud</servlet-name>
    <url-pattern>/crud</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>crudAdmin</servlet-name>
    <url-pattern>/crudAdmin</url-pattern>
  </servlet-mapping>
</web-app>